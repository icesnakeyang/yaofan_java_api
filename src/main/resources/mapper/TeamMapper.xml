<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gogoyang.yaofan.meta.team.dao.TeamDao">

    <resultMap id="teamMap" type="com.gogoyang.yaofan.meta.team.entity.Team">
        <result property="userId" column="user_id"/>
        <result property="createTime" column="create_time"/>
        <result property="teamId" column="team_id"/>
    </resultMap>

    <!--创建一个团队-->
    <insert id="createTeam"
            useGeneratedKeys="true"
            keyProperty="ids"
            parameterType="com.gogoyang.yaofan.meta.team.entity.Team">
      insert into team
      (team_id, name, description, create_time, user_id, status)
      values
      (#{teamId}, #{name}, #{description}, #{createTime}, #{userId}, #{status})
    </insert>

    <select id="getTeamByName" parameterType="java.lang.String"
            resultMap="teamMap">
        select * from team
        where name=#{name}
    </select>
</mapper>